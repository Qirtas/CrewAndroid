<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="asplundh.sps.com.asplundhproductivity.Activity.HomeActivity"
    android:id="@+id/home"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/blue_top_bar"
        >
        <LinearLayout
            android:id="@+id/btn_backward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            >

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:background="@drawable/backward_ic"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Counters"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/menu_ic"
            />

    </RelativeLayout>


    //Counter 1

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:text="Counter 1"
            android:textSize="16sp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textStyle="bold"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:orientation="horizontal"
            android:weightSum="10"
            >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4.5"
                android:background="@color/blue_light"
                >

                <LinearLayout
                    android:id="@+id/lay_hrs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/iv_1"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/green_roundeed"
                        android:layout_gravity="center_vertical"
                        />

                    <TextView
                        android:id="@+id/tv_counter_one_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey"
                        android:text="Hours (Bucket)"
                        android:textSize="16sp"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/iv_1"
                        />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey"
                    android:layout_marginTop="3dp"
                    android:layout_below="@+id/lay_hrs"/>

                <ImageView
                    android:id="@+id/iv_counter_one_settings"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/settings_ic"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="4dp"
                    />

            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/grey"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@color/blue_light"
                >
                <EditText
                    android:id="@+id/et_counter_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:inputType="number"
                    android:background="@null"
                    android:textSize="25sp"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:textColor="@color/grey"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lay_counter_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:background="@drawable/counter_increment"
                ></RelativeLayout>

        </LinearLayout>

    </LinearLayout>


    //Counter 2

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:text="Counter 2"
            android:textSize="16sp"
            android:layout_marginLeft="12dp"
            android:textStyle="bold"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:orientation="horizontal"
            android:weightSum="10"
            >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4.5"
                android:background="@color/blue_light"
                >

                <LinearLayout
                    android:id="@+id/lay_counter_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/iv_2"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/green_roundeed"
                        android:layout_gravity="center_vertical"
                        />

                    <TextView
                        android:id="@+id/tv_counter_two_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey"
                        android:text="Units (Spans)"
                        android:textSize="16sp"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/iv_1"
                        />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey"
                    android:layout_marginTop="3dp"
                    android:layout_below="@+id/lay_counter_two"/>

                <ImageView
                    android:id="@+id/iv_counter_two_settings"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/settings_ic"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="4dp"
                    />

            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/grey"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@color/blue_light"
                >
                <EditText
                    android:id="@+id/et_counter_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:inputType="number"
                    android:background="@null"
                    android:textSize="25sp"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:textColor="@color/grey"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lay_counter_inc_two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:background="@drawable/counter_increment"
                ></RelativeLayout>

        </LinearLayout>

    </LinearLayout>


    //Counter 3

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:text="Counter 3"
            android:textSize="16sp"
            android:layout_marginLeft="12dp"
            android:textStyle="bold"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:orientation="horizontal"
            android:weightSum="10"
            >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4.5"
                android:background="@color/blue_light"
                >

                <LinearLayout
                    android:id="@+id/lay_counter_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/iv_3"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/green_roundeed"
                        android:layout_gravity="center_vertical"
                        />

                    <TextView
                        android:id="@+id/tv_counter_three_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey"
                        android:text="Distance (Feet)"
                        android:textSize="16sp"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/iv_1"
                        />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey"
                    android:layout_marginTop="3dp"
                    android:layout_below="@+id/lay_counter_three"/>

                <ImageView
                    android:id="@+id/iv_counter_three_settings"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/settings_ic"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="4dp"
                    />

            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/grey"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@color/blue_light"
                >
                <EditText
                    android:id="@+id/et_counter_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:inputType="number"
                    android:background="@null"
                    android:textSize="25sp"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:textColor="@color/grey"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lay_counter_inc_three"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:background="@drawable/counter_increment"
                ></RelativeLayout>

        </LinearLayout>


    </LinearLayout>

    </LinearLayout>

    //Apply to area

    <RelativeLayout
        android:id="@+id/btn_apply_to_area"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:background="@color/blueee"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply to area"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

</RelativeLayout>
