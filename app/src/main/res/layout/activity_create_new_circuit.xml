<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_dark"
    tools:context="asplundh.sps.com.asplundhproductivity.Activity.CreateNewCircuitActivity"
    android:id="@+id/create_new_circuit"
    >


    <TextView
        android:id="@+id/tv_bid_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEW CIRCUIT"
        android:textSize="26sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        />

    <ImageView
        android:id="@+id/logout_ic"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@drawable/logout"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:id="@+id/back_ic"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@drawable/back_ic"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        />


    <LinearLayout
        android:id="@+id/lay_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logout_ic"
        android:orientation="vertical"
        android:background="@drawable/screen_bg"
        >

        //TITLE

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_dark"
            android:textSize="23sp"
            android:text="Title:"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/et_circuit_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter circuit title"
            android:textSize="20sp"
            android:textColor="@color/blue_dark"
            android:textColorHint="@color/blue_dark"
            android:layout_marginTop="3dp"
            android:paddingLeft="8dp"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/grey"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_dark"
            android:textSize="23sp"
            android:text="Type:"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:textStyle="bold"
            />

        <RadioGroup
            android:id="@+id/radioType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
