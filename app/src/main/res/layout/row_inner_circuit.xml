<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_marginLeft="7dp"
              android:layout_marginRight="7dp"
              android:background="@color/white"
    >
    <LinearLayout
        android:id="@+id/chkinoutLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:orientation="vertical"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_grey"
            />

        //CIRCUIT TYPE
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="2dp"
            android:visibility="visible"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Circuit type:"
                android:textColor="@color/blue_dark"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginRight="3dp"
                />
            <TextView
                android:id="@+id/tv_circuit_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 1"
                android:textColor="@color/blue_light_text"
                android:textSize="15sp"
                android:textStyle="bold"
                />
        </LinearLayout>

        //MILAGE
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="2dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Milage:"
                android:textColor="@color/blue_dark"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginRight="3dp"
                />
            <TextView
                android:id="@+id/tv_milage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spans"
                android:textColor="@color/blue_light_text"
                android:textSize="15sp"
                android:textStyle="bold"
                />
        </LinearLayout>

        //SURVEYS COMPLETED
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="2dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Survey(s) Completed:"
                android:textColor="@color/blue_dark"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginRight="3dp"
                />
            <TextView
                android:id="@+id/tv_surveys_completed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="subunits"
                android:textColor="@color/blue_light_text"
                android:textSize="15sp"
                android:textStyle="bold"
                />
        </LinearLayout>


        //EQUIPMENT NOTE
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="2dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Equipment note:"
                android:textColor="@color/blue_dark"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginRight="3dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <at.blogc.android.views.ExpandableTextView
                    android:id="@+id/expandableTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:maxLines="2"
                    android:textColor="@color/blue_light_text"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    app:animation_duration="750"/>

                <!-- Optional parameter animation_duration: sets the duration of the expand animation -->

                <Button
                    android:id="@+id/button_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_marginTop="6dp"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_marginBottom="4dp"
                    android:background="@color/blue_btn"
                    android:textColor="@color/white"
                    android:text="Show More"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_equipment_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Low density , Medium density"
                android:textColor="@color/blue_light_text"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>