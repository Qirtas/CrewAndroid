<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_dark"
    tools:context="asplundh.sps.com.asplundhproductivity.Activity.BidPlanActivity">

    <TextView
        android:id="@+id/tv_bid_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BID PLANS"
        android:textSize="26sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        />
    
    <ImageView
        android:id="@+id/logout_ic"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@drawable/logout"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:id="@+id/back_ic"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@drawable/back_ic"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logout_ic"
        android:background="@drawable/screen_bg"
        >

        //FILTER
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@color/blue_dark"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="19dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginRight="4dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/filter"
                        />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Filter"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            />
                </LinearLayout>
        </RelativeLayout>

        //SEARCH
        <RelativeLayout
            android:id="@+id/lay_search"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@color/blue_dark"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="19dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="4dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/loupe"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    />
            </LinearLayout>
        </RelativeLayout>


        //LIST
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay_search"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:scrollbars="vertical" />

    </RelativeLayout>


</RelativeLayout>
